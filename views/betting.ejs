<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/chessboard-1.0.0.min.css">
    <link rel="stylesheet" href="/css/betting.css">
</head>
<body class="dark-theme">
    <div class="container-fluid">
        <div class="row">
            <!-- Left Panel: Game and Betting -->
            <div class="col-md-8">
                <div class="game-container">
                    <div class="game-header">
                        <div class="player-info black">
                            <img src="/img/bot-avatar.png" alt="Black Player" class="player-avatar">
                            <div class="player-details">
                                <span class="player-name">Black Player</span>
                                <span class="player-rating">Rating: 2000</span>
                            </div>
                            <div class="player-time">10:00</div>
                        </div>
                        <div class="game-status">
                            <span class="status-text">Game in Progress</span>
                        </div>
                        <div class="player-info white">
                            <div class="player-time">10:00</div>
                            <div class="player-details">
                                <span class="player-name">White Player</span>
                                <span class="player-rating">Rating: 1800</span>
                            </div>
                            <img src="/img/user-avatar.png" alt="White Player" class="player-avatar">
                        </div>
                    </div>
                    <div id="game-board" class="chess-board"></div>
                    <div class="game-controls">
                        <button class="btn btn-primary">Resign</button>
                        <button class="btn btn-secondary">Offer Draw</button>
                        <button class="btn btn-info">Analysis</button>
                    </div>
                </div>
                <div class="betting-container">
                    <h3>Available Markets</h3>
                    <div class="markets-grid">
                        <!-- Market cards will be dynamically added here -->
                    </div>
                    <div class="bet-slip">
                        <h4>Bet Slip</h4>
                        <div class="selected-bets">
                            <!-- Selected bets will be dynamically added here -->
                        </div>
                        <div class="bet-controls">
                            <input type="number" class="form-control" placeholder="Stake">
                            <button class="btn btn-success">Place Bet</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Panel: Chat and Stats -->
            <div class="col-md-4">
                <div class="chat-container">
                    <div class="chat-header">
                        <h3>Live Chat</h3>
                    </div>
                    <div class="chat-messages">
                        <!-- Chat messages will be dynamically added here -->
                    </div>
                    <div class="chat-input">
                        <input type="text" class="form-control" placeholder="Type a message...">
                        <div class="chat-controls">
                            <button class="btn btn-primary" title="Send Message">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                            <button class="btn btn-secondary" title="Voice Message">
                                <i class="fas fa-microphone"></i>
                            </button>
                            <button class="btn btn-info" title="Share Screen">
                                <i class="fas fa-desktop"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="stats-container">
                    <h3>Market Statistics</h3>
                    <div class="stats-grid">
                        <div class="stat-card">
                            <span class="stat-label">Total Bets</span>
                            <span class="stat-value">150</span>
                        </div>
                        <div class="stat-card">
                            <span class="stat-label">Total Volume</span>
                            <span class="stat-value">$25,000</span>
                        </div>
                        <div class="stat-card">
                            <span class="stat-label">Active Markets</span>
                            <span class="stat-value">5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <div class="modal fade" id="betConfirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Bet</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Bet details will be dynamically added here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Confirm Bet</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/chess.js"></script>
    <script src="/js/chessboard-1.0.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/your-kit-code.js"></script>
    <script src="/js/betting.js"></script>
</body>
</html> 